<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NguyenQuocVuong_Nhom11</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NguyenQuocVuong_Nhom11.styles.css" asp-append-version="true" />
    
    <!-- Thêm Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Font Awesome (Icon đẹp) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- CSS tùy chỉnh -->
    <link rel="stylesheet" href="~/css/stylesheet.css" asp-append-version="true">

</head>
<body>
    <header>
        <!-- Navbar -->
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">🌟 Web Bán Hàng</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Product">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Category">Danh Mục</a>
                    </li>
                    

                </ul>
                <!--O tim kiem-->
                    <form class="d-flex" action="/Admin/Product/Search" method="get">
    <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." name="keyword">
    <button class="btn btn-warning" type="submit"><i class="fas fa-search"></i></button>
</form>
                <!-- Chế độ sáng/tối -->
                <button id="toggleDarkMode" class="btn btn-outline-light ms-3">🌙 Dark Mode</button>

                    <!-- Kiểm tra trạng thái đăng nhập -->
                    @if (User.Identity.IsAuthenticated)
                    {
        <span class="navbar-text text-light me-3">👋 @User.Identity.Name</span>
        <a class="btn btn-danger ms-2" href="/Identity/Account/Logout">Đăng xuất</a>
                    }
                    else
                    {
        <a class="btn btn-outline-light me-2" href="/Identity/Account/Login">Đăng nhập</a>
        <a class="btn btn-primary" href="/Identity/Account/Register">Đăng ký</a>
                    }
                    <!--Them button gio hang-->
                    <form class="d-flex">
                        <button class="btn btn-outline-light ms-3" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                        </button>
                    </form>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Bootstrap & Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("toggleDarkMode").addEventListener("click", function () {
            document.body.classList.toggle("dark-mode");
            if (document.body.classList.contains("dark-mode")) {
                this.innerHTML = "☀️ Chế độ sáng";
            } else {
                this.innerHTML = "🌙 Chế độ tối";
            }
        });
    </script>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
