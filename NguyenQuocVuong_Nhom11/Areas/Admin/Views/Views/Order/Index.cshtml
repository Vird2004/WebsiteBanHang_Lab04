@model IEnumerable<NguyenQuocVuong_Nhom11.Models.Order>

<h2>Order Management</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
          
            <th>Total Price</th>
         
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                <tr>
                    <td>@order.Id</td>
                    
                    <td>@order.TotalPrice</td>
                   
                    <td>
                        <a asp-area="Admin" asp-controller="Order" asp-action="Display" asp-route-id="@order.Id" class="btn btn-info">View</a>
                        <a asp-area="Admin" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
